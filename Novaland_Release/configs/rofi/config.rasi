configuration {
    modi: "drun";
    show-icons: true;
    display-drun: "üöÄ APPS";
    drun-display-format: "{name}";
    font: "JetBrainsMono Nerd Font Bold 11";
}

@theme "/dev/null"

* {
    bg: #0d0f18B3;      /* N·ªÅn t·ªëi trong su·ªët */
    bg-alt: #1a1b26;    /* N·ªÅn thanh input */
    fg: #cdd6f4;        /* M√†u ch·ªØ */
    accent: #2de2e6;    /* M√†u Cyan Neon */
    active: #f9c80e;    /* M√†u V√†ng */

    background-color: transparent;
    text-color: @fg;
    margin: 0;
    padding: 0;
    spacing: 0;
}

window {
    width: 40%;
    height: 55%;
    background-color: @bg;
    border: 2px;
    border-color: @accent;
    border-radius: 12px;
}

mainbox {
    children: [ inputbar, listview ];
}

inputbar {
    background-color: @bg-alt;
    padding: 12px;
    margin: 10px 10px 0 10px;
    border-radius: 8px;
    children: [ prompt, entry ];
}

prompt {
    text-color: @active;
    padding: 0 10px 0 0;
}

entry {
    placeholder: "Search...";
    placeholder-color: #565f89;
    text-color: @accent;
}

listview {
    columns: 3;       /* 3 C·ªôt */
    lines: 3;         /* 3 H√†ng */
    cycle: true;      /* Cho ph√©p cu·ªôn v√≤ng l·∫∑p */
    dynamic: true;
    layout: vertical;
    margin: 10px;
    spacing: 10px;
}

element {
    orientation: vertical; /* Icon tr√™n, Ch·ªØ d∆∞·ªõi */
    padding: 20px 10px;
    border-radius: 8px;
    cursor: pointer;
}

element selected {
    background-color: #2de2e620;
    border: 1px solid;          /* Khai b√°o ƒë·ªô d√†y v√† ki·ªÉu */
    border-color: @accent;      /* Khai b√°o m√†u ·ªü d√≤ng ri√™ng */
    text-color: @accent;
}

element-icon {
    size: 64px;       /* Icon to r√µ */
    horizontal-align: 0.5;
    cursor: inherit;
}

element-text {
    horizontal-align: 0.5;
    vertical-align: 0.5;
    margin: 10px 0 0 0;
    cursor: inherit;
}
